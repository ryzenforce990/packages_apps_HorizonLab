<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:background="@android:color/transparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="330.0dip"
        android:layout_marginHorizontal="16.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="14.0dip">
        <com.google.android.material.card.MaterialCardView
            android:background="@android:color/transparent"
            android:id="@+id/hzn_about_card"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginEnd="8.0dip"
            app:cardCornerRadius="24.0dip"
            app:cardElevation="0.0dip"
            app:rippleColor="?android:colorControlHighlight">
            <com.horizon.widget.WallpaperCardView
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
            <View
                android:background="?androidprv:attr/colorSurface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.7" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_hzn_logo"
                    android:tint="?android:attr/textColorPrimary"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip" />
                <TextView
                    android:textSize="20.0sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="About Team"
                    android:fontFamily="@*android:string/config_headlineFontFamily"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55.0dip"  />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:gravity="start|center"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginStart="8.0dip">
            <LinearLayout
                android:gravity="start|center"
                android:background="@drawable/hzn_card_background_sin"
                android:orientation="vertical"
                android:id="@+id/hzn_qspanel_card"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingHorizontal="16.0dip"
                android:paddingTop="5.0dip"
                android:layout_marginBottom="6.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:background="@drawable/declan_adaptive_shape"
                    android:src="@drawable/ic_hzn_quicksettings"
                    android:backgroundTint="?android:colorAccent"
                    android:tint="?android:colorPrimary"
                    android:layout_width="44.0dip"
                    android:layout_height="44.0dip"
                    android:padding="8.0dip"
                    android:layout_marginBottom="21.0dip" />
                <TextView
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Quick Settings"
                    android:textSize="17.0sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="@*android:string/config_headlineFontFamily" />
                <TextView
                    android:ellipsize="marquee"
                    android:text="Customize the quick settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:alpha="0.7"
                    android:maxLines="4"
                    android:textSize="14.0sp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>
            <LinearLayout
                android:gravity="start|center"
                android:background="@drawable/hzn_card_background_sin"
                android:id="@+id/hzn_statusbar_card"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingHorizontal="16.0dip"
                android:paddingTop="5.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_weight="1.0">
                <ImageView
                    android:background="@drawable/declan_adaptive_shape"
                    android:src="@drawable/ic_hzn_statusbar"
                    android:backgroundTint="?android:colorAccent"
                    android:tint="?android:colorPrimary"
                    android:layout_width="44.0dip"
                    android:layout_height="44.0dip"
                    android:padding="8.0dip"
                    android:layout_marginBottom="21.0dip" />
                <TextView
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="17.0sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="@*android:string/config_headlineFontFamily"
                    android:text="Status Bar" />
                <TextView
                    android:ellipsize="marquee"
                    android:text="Customize the status bar area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:alpha="0.7"
                    android:maxLines="4"
                    android:textSize="14.0sp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
